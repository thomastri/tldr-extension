{
  "manifest_version": 2,
  "name": "TLDR",
  "version": "0.1",
  "description": "Summarizes webpages",
  "icons": {
    "128": "images/icon.png"
  },
  "browser_action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Summarizes the page"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["js/main.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}